<!DOCTYPE html>
<html lang="en">
  
<div class="ui five blue stackable cards">
    <div class="ui card">
        <a class="image" href="#">
            <img src="/public/images/location.jpg">
        </a>
        <div class="content">
            <i class="right floated big green thumbtack alternate icon"></i>
            <div class="header">
                ${_station.name}
            </div>
            <div class="item">Lat: ${_station.latitude}</div>
            <div class="item">Lng: ${_station.longitude}</div>
        </div>
    </div>
    <div class="ui link card">
        <div class="image">
            <img src="/public/images/sky.jpg">
        </div>
        <div class="content">
            <i class="right floated big yellow cloud sun icon"></i>
            <div class="header">
                Weather
            </div>
            <div class="item">${_station.weather}</div>
        </div>
    </div>
    <div class="ui link card">
        <div class="image">
            <img src="/public/images/sky2.jpg">
        </div>
        <div class="content">
            <i class="right floated big black temperature low icon"></i>
            <div class="header">
                Temp
            </div>
            <div class="item">${_station.tempC}C</div>
            <div class="item">${_station.tempF}F</div>
            <div class="item"></div>
            <div class="item">
                <i class="right floated big blue icon"></i>
            </div>
        </div>
    </div>
    <div class="ui link card">
        <div class="image">
            <img src="/public/images/sky3.jpg">
        </div>
        <div class="content">
            <i class="right floated big blue wind icon"></i>
            <div class="header">
                Wind
            </div>
            <div class="item">${_station.wind} bft / ${_station.windFeeling}</div>
            <div class="item">Compass: ${_station.windDirection}</div>
            <div class="item">
                Feels like:
            </div>
            <div class="item">
                ${_station.windChill.round(1)}
            </div>
        </div>
    </div>
    <div class="ui link card">
        <div class="image">
            <img src="/public/images/sky4.jpg">
        </div>
        <div class="content">
            <i class="right floated large red compass icon"></i>
            <div class="header">
                Pressure
            </div>
            <div class="item">${_station.pressure} hpa</div>
        </div>
    </div>
</div>