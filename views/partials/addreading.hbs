<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="six fields">
    <div class="field">
      <label>Code</label>
      <input name="code" placeholder "0" type="number" required>
    </div>
    <div class="field">
      <label>Temperature</label>
      <input name="temp" placeholder "0.0" type="number" required>
    </div>
     <div class="field">
      <label>Wind Speed</label>
      <input placeholder="0.0" type="number" name="windSpeed" min="1" max="100" required>
    </div>
     <div class="field">
      <label>Wind Direction</label>
      <input placeholder="0.00" type="number" step="0.1" name="windDirection" required>
    </div>
     <div class="field">
      <label>Pressure</label>
      <input placeholder="0" type="number" name="pressure" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Report</button>
</form>

<form  class="ui stacked segment form" action="/station/{{station.id}}/autoreading" method="POST">
<button class="ui red submit button"> Auto Generate Report</button>
    <p>
      (When autoread waether codes could be different to what was given as an example.) 
    </p>
</form>


<div class="ui segment" id="chart"></div>

<script>
  const data = {
    labels: [
      {{#each station.reading}}
        "{{this}}",
      {{/each}}
    ],
    datasets: [
      {
        name: "Temperature", type: "line",
        values: [
          {{#each reading.tempTrend}}
            {{this}},
          {{/each}}
        ]
      }
    ]
  }
  const chart = new frappe.Chart("#chart", {
    title: "Temperature Trend",
    data: data,
    type: 'line',
    height: 250,
  })
</script>

