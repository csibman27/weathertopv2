<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="six fields">
    <div class="field">
      <label>Code</label>
      <input name="code" placeholder "code" type="text" required>
    </div>
    <div class="field">
      <label>Temp</label>
      <input name="temp" placeholder "temperature" type="text" required>
    </div>
     <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Wind Speed" type="text" name="windSpeed" min="1" max="117" required>
    </div>
     <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Wind Direction" type="number" name="windDirection" required>
    </div>
     <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="number" name="pressure" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Report</button>
</form>  